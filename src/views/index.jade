doctype html
html(lang='pt-BR')
	include includes/head
	body(ng-controller="SiteController")
		#fb-root
		script.
			(function(d, s, id) {
			var js, fjs = d.getElementsByTagName(s)[0];
			if (d.getElementById(id)) return;
