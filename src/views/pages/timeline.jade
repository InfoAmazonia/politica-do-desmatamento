article.timeline-item
	.timeline-content
		.container
			.six.columns
				header
					h2 {{item.title}}
					h3.subtitle {{item.subtitle}}
				section(ng-show="showInfo")

					p
						span(ng-repeat="(index, content) in item.contents" video-content video-in="content.in" video-out="content.out" last-content="(index == item.contents.length-1)") {{content.text}} 

				//
					p(ng-show="readyForNext")
						a(href="{{nextUrl}}") Clique para continuar.

			.six.columns
				section#next
					span.icon-fast-forward
					p
						a(href="{{nextUrl}}") Pr√≥ximo
					h3
						a(href="{{nextUrl}}") {{nextTitle}}